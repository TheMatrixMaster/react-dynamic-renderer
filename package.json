{
  "name": "react-dynamic-renderer",
  "version": "0.0.1",
  "description": "Dynamic module that renders JSON schemas into fully interactive reactJS components",
  "type": "module",
  "main": "dist/index.js",
  "sideEffects": false,
  "scripts": {
    "build:publish": "pnpm build && cd dist && pnpm publish",
    "build": "pnpm build:ts && pnpm build:js && pnpm build:post",
    "build:post": "node build.mjs",
    "build:ts": "ttsc -p tsconfig.build.json",
    "watch:ts": "ttsc -w -p tsconfig.build.json",
    "build:js": "babel -d dist -x .js,.ts,.jsx,.tsx src",
    "watch:js": "babel -d dist -x .js,.ts,.jsx,.tsx src -w .",
    "push": "pnpm build && cd dist && yalc push",
    "test": "jest",
    "lint": "pnpm eslint --max-warnings=0 src",
    "format": "pnpm prettier -w src __tests__",
    "check-format": "pnpm prettier --check src api-gen/*.mjs"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com/"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:TheMatrixMaster/react-dynamic-renderer.git"
  },
  "keywords": [
    "api"
  ],
  "author": "Stephen Z. Lu",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/TheMatrixMaster/react-dynamic-renderer/issues"
  },
  "homepage": "https://github.com/TheMatrixMaster/react-dynamic-renderer#readme",
  "dependencies": {
    "core-js": "~3.14.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "timeago.js": "^4.0.2"
  },
  "devDependencies": {
    "@babel/cli": "^7.20.7",
    "@babel/core": "^7.20.7",
    "@babel/eslint-parser": "^7.19.1",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-react": "^7.18.6",
    "@babel/preset-typescript": "^7.18.6",
    "@types/jest": "^28.1.8",
    "@types/node": "^17.0.45",
    "@types/react": "^17.0.52",
    "@types/react-dom": "^17.0.18",
    "@typescript-eslint/eslint-plugin": "^5.47.1",
    "@typescript-eslint/parser": "^5.47.1",
    "babel-jest": "^29.3.1",
    "babel-plugin-module-resolver": "^4.1.0",
    "eslint": "^7.32.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jsx-a11y": "^6.6.1",
    "eslint-plugin-react": "^7.31.11",
    "eslint-plugin-react-hooks": "^4.6.0",
    "jest": "^29.3.1",
    "js-yaml": "^4.1.0",
    "prettier": "2.4.0",
    "ts-jest": "^29.0.3",
    "ts-node": "^10.9.1",
    "ttypescript": "^1.5.15",
    "typescript": "^4.9.4",
    "typescript-transform-paths": "^3.4.4"
  },
  "peerDependencies": {
    "react": "^17.0.0",
    "timeago.js": "^4.0.2"
  },
  "pnpm": {
    "overrides": {
      "oazapfts>typescript": "^4.5.0"
    }
  },
  "prettier": {
    "singleQuote": true,
    "jsxSingleQuote": false,
    "arrowParens": "avoid",
    "quoteProps": "consistent"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true
    },
    "extends": [
      "eslint:recommended",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:react-hooks/recommended",
      "plugin:import/errors",
      "plugin:jsx-a11y/recommended"
    ],
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "ecmaVersion": 12,
      "sourceType": "module",
      "project": "./tsconfig.json",
      "tsconfigRootDir": "./"
    },
    "plugins": [
      "react",
      "@typescript-eslint",
      "import"
    ],
    "rules": {
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/no-inferrable-types": "off",
      "@typescript-eslint/no-unused-vars": "off",
      "@typescript-eslint/no-non-null-assertion": "off",
      "@typescript-eslint/ban-types": [
        "error",
        {
          "extendDefaults": true,
          "types": {
            "{}": false
          }
        }
      ]
    },
    "settings": {
      "react": {
        "version": "detect"
      },
      "import/resolver": {
        "typescript": {}
      }
    }
  }
}